<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="密方"
                app:menu="@menu/toolbar"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            <!-- app:navigationIcon="@drawable/ic_menu" -->

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Note: A RecyclerView can also be used -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MyPwdMainActivity"
                android:orientation="vertical"
                android:layout_margin="20sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:helperTextEnabled="true"
                    app:helperText="*必填"
                    android:hint="参数1"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/setPwsArg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    android:hint="参数2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/setPwsArg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="随机种子"
                    app:helperTextEnabled="true"
                    app:helperText="不同种子所生成的密码不同，默认为1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/setPwsSeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    app:helperTextEnabled="true"
                    app:helperText="生成密码长度，默认长度为8"
                    android:hint="长度"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/setPwdLen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/setPwdCaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大写字母"
                        android:layout_marginRight="8sp"
                        android:checkable="true"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/setPwdSpeChar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特殊符号"
                        android:checkable="true" />
                </LinearLayout>

                <Button
                    android:id="@+id/generate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:orientation="horizontal"
                    android:background="#f9f0ff">
                    <TextView
                        android:id="@+id/generate_pwd"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="60sp"
                        android:text="密码待生成..."
                        android:textColor="#6200ee"
                        android:gravity="center"/>
                    <Button
                        style="@style/Widget.Material3.Button.TextButton"
                        android:id="@+id/copyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复制"
                        app:icon="@drawable/ic_copy"
                        android:textSize="10sp"
                        app:iconSize="18dp"
                        />

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
